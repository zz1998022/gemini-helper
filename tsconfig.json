{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@src/*": ["./src/*"],
      "@utils/*": ["./src/utils/*"],
      "@svcs/*": ["./src/services/*"],
      "@ctrls/*": ["./src/controllers/*"],
      "@config/*": ["./src/config/*"]
    }
  },
  "include": ["src/**/*"]
}
